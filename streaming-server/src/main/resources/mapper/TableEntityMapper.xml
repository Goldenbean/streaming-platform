<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="raptor.streaming.server.dao.TableDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="raptor.streaming.server.entity.TableEntity">
        <result column="id" property="id" />
        <result column="remark" property="remark" />
        <result column="creater" property="creater" />
        <result column="modifier" property="modifier" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modify" property="gmtModify" />
        <result column="name" property="name" />
        <result column="type" property="type" />
        <result column="source_name" property="sourceName" />
        <result column="app_key" property="appKey" />
        <result column="table_schema" property="tableSchema" />
        <result column="config_json" property="configJson" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        remark,
        creater,
        modifier,
        gmt_create,
        gmt_modify,
        name, type, source_name, app_key, table_schema, config_json
    </sql>

</mapper>
